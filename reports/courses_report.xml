<odoo>
    <record id="property_report" model="ir.actions.report">
        <field name="name">Course Report</field>
        <field name="model">course.management</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_file">course_task.course_report_template</field>
        <field name="binding_model_id" ref="model_course_management"/>
        <field name="binding_type" >report</field>
        <field name="report_name">course_task.course_report_template</field>
    </record>
    <template id="course_report_template">
        <t t-call="web.html_container">
           <t t-call="web.html_container">
                         <style>
                body {
                    font-family: Arial, sans-serif;
                    font-size: 12px;
                    color: #333;
                }

                h2 {
                    color: #4a90e2;
                    margin-bottom: 10px;
                }

                p {
                    margin: 5px 0;
                    font-size: 11px;
                }

                .table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 15px;
                }

                .table th, .table td {
                    border: 1px solid #ccc;
                    padding: 5px;
                    text-align: left;
                    font-size: 11px;
                }

                .table th {
                    background-color: #f2f2f2;
                }

<!--                .page {-->
<!--                    page-break-after: always;-->
<!--                }-->

<!--                .page:last-child {-->
<!--                    page-break-after: auto;-->
<!--                }-->
            </style>
            <t t-foreach="docs" t-as="course">
                <div class="page">
                    <h2>Course: <t t-esc="course.name"/></h2>
                    <p><strong>Instructor:</strong> <t t-esc="course.instructor_id.name"/></p>
                    <p><strong>Room:</strong> <t t-esc="course.room_id.name"/></p>
                    <p><strong>Number of Lessons:</strong> <t t-esc="len(course.lesson_ids)"/></p>

                    <t t-if="course.lesson_ids">


                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Lesson Name</th>
                                <th>Lesson Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="course.lesson_ids" t-as="lesson">
                                <tr>
                                    <td><t t-esc="lesson.name"/></td>
                                    <td><t t-esc="lesson.date"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
            </t>
                    <t t-else="">
                        <p>No lessons available for this course.</p>
                    </t>

                </div>
            </t>
        </t>
        </t>
    </template>
</odoo>