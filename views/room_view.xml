<odoo>
    <data>

  <record id="room_form_view" model="ir.ui.view">
            <field name="name">room_form_view</field>
            <field name="model">room.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet >
                        <div class="oe_title">
                            <label for="name"/>
                            <h3>
                                <field name="name"/>

                            </h3>
                        </div>
                        <group>
                            <group string="info">
                                <field name="lesson_ids" widget="many2many_tags"/>
                                <field name="capacity"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="room_tree_view" model="ir.ui.view">
            <field name="name">room_tree_view</field>
            <field name="model">room.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacity"/>
                </tree>
            </field>
        </record>

        <record id="room_action" model="ir.actions.act_window">
            <field name="name">room</field>
            <field name="res_model">room.management</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Room " id="room" parent="base_menu_courses" action="room_action" />

    </data>
</odoo>