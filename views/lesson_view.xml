<odoo>
    <data>

        <record id="lesson_form_view" model="ir.ui.view">
            <field name="name">lesson_form_view</field>
            <field name="model">lesson.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet >
                        <div class="oe_title">
                            <label for="name"/>
                            <h3>
                                <field name="name" />
                            </h3>
                        </div>

                            <group string="info">

<!--                                 <field name="course_id"/>-->
                                  <field name="date"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="lesson_tree_view" model="ir.ui.view">
            <field name="name">lesson_tree_view</field>
            <field name="model">lesson.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
<!--                         <field name="course_id"/>-->
                          <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="lesson_action" model="ir.actions.act_window">
            <field name="name">lesson</field>
            <field name="res_model">lesson.management</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="lesson " id="lesson" parent="base_menu_lesson" action="lesson_action"  />
<!---->
    </data>
</odoo>